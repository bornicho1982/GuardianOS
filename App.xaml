<Application x:Class="GuardianOS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:GuardianOS.Core.Converters">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design - Tema Base -->
                <materialDesign:BundledTheme BaseTheme="Dark" 
                                              PrimaryColor="DeepPurple" 
                                              SecondaryColor="Amber" />
                
                <!-- Material Design - Estilos por defecto -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- ========== CONVERTERS GLOBALES ========== -->
            <converters:InvertBoolConverter x:Key="InvertBoolConverter"/>
            <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:BoolToApiStatusConverter x:Key="BoolToApiStatusConverter"/>
            <converters:ToUpperConverter x:Key="ToUpperConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
            
            <!-- ========== COLORES PERSONALIZADOS (TEMA DESTINY) ========== -->
            <SolidColorBrush x:Key="DestinyGold" Color="#FFD700"/>
            <SolidColorBrush x:Key="DestinyPurple" Color="#7B68EE"/>
            <SolidColorBrush x:Key="DestinyDarkPurple" Color="#1A1A2E"/>
            <SolidColorBrush x:Key="DestinyBackground" Color="#121212"/>
            <SolidColorBrush x:Key="DestinySidebar" Color="#0D0D0D"/>
            <SolidColorBrush x:Key="DestinyCardBackground" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="DestinyBorder" Color="#2A2A2A"/>
            <SolidColorBrush x:Key="DestinyTextPrimary" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="DestinyTextSecondary" Color="#B0B0B0"/>
            <SolidColorBrush x:Key="DestinyTextMuted" Color="#666666"/>
            <SolidColorBrush x:Key="DestinySuccess" Color="#27AE60"/>
            <SolidColorBrush x:Key="DestinyError" Color="#EF5350"/>
            <SolidColorBrush x:Key="DestinyWarning" Color="#F39C12"/>
            
            <!-- ========== ESTILOS GLOBALES ========== -->
            
            <!-- Estilo base para todas las ventanas -->
            <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}">
                <Setter Property="Background" Value="{StaticResource DestinyBackground}"/>
                <Setter Property="Foreground" Value="{StaticResource DestinyTextPrimary}"/>
            </Style>
            
            <!-- Estilo para cards/paneles -->
            <Style x:Key="DestinyCard" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource DestinyCardBackground}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="BorderBrush" Value="{StaticResource DestinyBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
            
            <!-- Estilo para títulos de sección -->
            <Style x:Key="SectionTitle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource DestinyTextPrimary}"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
            </Style>
            
            <!-- Estilo para subtítulos -->
            <Style x:Key="SubTitle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{StaticResource DestinyTextSecondary}"/>
            </Style>
            
            <!-- Estilo para texto silenciado -->
            <Style x:Key="MutedText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource DestinyTextMuted}"/>
            </Style>
            
            <!-- Botón primario estilo Destiny -->
            <Style x:Key="DestinyPrimaryButton" TargetType="Button" 
                   BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Background" Value="{StaticResource DestinyPurple}"/>
                <Setter Property="BorderBrush" Value="{StaticResource DestinyPurple}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
            </Style>
            
            <!-- Botón secundario estilo Destiny -->
            <Style x:Key="DestinySecondaryButton" TargetType="Button" 
                   BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="BorderBrush" Value="{StaticResource DestinyBorder}"/>
                <Setter Property="Foreground" Value="{StaticResource DestinyTextSecondary}"/>
                <Setter Property="Padding" Value="16,8"/>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
