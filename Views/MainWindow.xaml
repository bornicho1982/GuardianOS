<Window x:Class="GuardianOS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:GuardianOS.ViewModels"
        mc:Ignorable="d"
        Title="GuardianOS - Destiny 2 Suite"
        Height="800" Width="1280"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignDarkBackground}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}">

    <Window.Resources>
        <!-- Estilo personalizado para botones del menú lateral -->
        <Style x:Key="NavButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Height" Value="64"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="4,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="#FFD700"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón seleccionado -->
        <Style x:Key="NavButtonSelectedStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="#FFD700"/>
        </Style>

        <!-- Convertidor de visibilidad booleana invertida -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Menú lateral de navegación -->
            <ColumnDefinition Width="280"/>
            <!-- Área de contenido principal -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ========== PANEL DE NAVEGACIÓN LATERAL ========== -->
        <Border Grid.Column="0" 
                Background="#0D0D0D"
                BorderBrush="#2A2A2A"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Logo y título -->
                    <RowDefinition Height="Auto"/>
                    <!-- Estado de conexión -->
                    <RowDefinition Height="Auto"/>
                    <!-- Menú de navegación -->
                    <RowDefinition Height="*"/>
                    <!-- Información del usuario -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo y Título de la App -->
                <StackPanel Grid.Row="0" Margin="20,24,20,16">
                    <TextBlock Text="GUARDIAN"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#FFD700"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="OS"
                               FontSize="28"
                               FontWeight="Light"
                               Foreground="#FFFFFF"
                               Margin="-50,-8,0,0"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Destiny 2 Suite"
                               FontSize="11"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Estado de Conexión con Bungie -->
                <Border Grid.Row="1" 
                        Margin="16,0,16,16"
                        Padding="12"
                        CornerRadius="8"
                        Background="#1A1A1A">
                    <Grid>
                        <!-- Mostrar cuando NO está autenticado -->
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding ConnectWithBungieCommand}"
                                IsEnabled="{Binding IsConnecting, Converter={StaticResource InvertBoolConverter}, FallbackValue=True}"
                                Visibility="{Binding IsUserAuthenticated, Converter={StaticResource InvertedBoolToVisConverter}, FallbackValue=Visible}"
                                Height="44"
                                Background="#7B68EE"
                                BorderBrush="#7B68EE"
                                Foreground="White">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Link" 
                                                         VerticalAlignment="Center"
                                                         Width="20" Height="20"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="Conectar con Bungie"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <!-- Mostrar cuando está conectando -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Visibility="{Binding IsConnecting, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}">
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         IsIndeterminate="True"
                                         Width="24" Height="24"
                                         Margin="0,0,12,0"/>
                            <TextBlock Text="Conectando..."
                                       Foreground="#888888"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Menú de Navegación -->
                <ScrollViewer Grid.Row="2" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="8,0">
                    <StackPanel>
                        <!-- Sección: Gestión -->
                        <TextBlock Text="GESTIÓN"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#555555"
                                   Margin="16,16,0,8"/>

                        <!-- Inventario -->
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToInventoryCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Backpack"
                                                         Width="24" Height="24"
                                                         VerticalAlignment="Center"/>
                                <StackPanel Margin="16,0,0,0">
                                    <TextBlock Text="Inventario"
                                               FontSize="14"
                                               FontWeight="Medium"/>
                                    <TextBlock Text="Gestión de ítems"
                                               FontSize="11"
                                               Foreground="#666666"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- Armas -->
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToWeaponsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pistol"
                                                         Width="24" Height="24"
                                                         VerticalAlignment="Center"/>
                                <StackPanel Margin="16,0,0,0">
                                    <TextBlock Text="Evaluación de Armas"
                                               FontSize="14"
                                               FontWeight="Medium"/>
                                    <TextBlock Text="God Rolls y Perks"
                                               FontSize="11"
                                               Foreground="#666666"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- Sección: Herramientas -->
                        <TextBlock Text="HERRAMIENTAS"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#555555"
                                   Margin="16,24,0,8"/>

                        <!-- Constructor de Builds -->
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToBuildGeneratorCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Creation"
                                                         Width="24" Height="24"
                                                         VerticalAlignment="Center"
                                                         Foreground="#9B59B6"/>
                                <StackPanel Margin="16,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Constructor de Builds"
                                                   FontSize="14"
                                                   FontWeight="Medium"/>
                                        <Border Background="#9B59B6"
                                                CornerRadius="4"
                                                Padding="6,2"
                                                Margin="8,0,0,0">
                                            <TextBlock Text="IA"
                                                       FontSize="9"
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="Optimización de armadura"
                                               FontSize="11"
                                               Foreground="#666666"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- Mapas -->
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToMapsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Map"
                                                         Width="24" Height="24"
                                                         VerticalAlignment="Center"/>
                                <StackPanel Margin="16,0,0,0">
                                    <TextBlock Text="Mapas y Coleccionables"
                                               FontSize="14"
                                               FontWeight="Medium"/>
                                    <TextBlock Text="Checklists interactivos"
                                               FontSize="11"
                                               Foreground="#666666"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- Eventos -->
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToEventsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarClock"
                                                         Width="24" Height="24"
                                                         VerticalAlignment="Center"/>
                                <StackPanel Margin="16,0,0,0">
                                    <TextBlock Text="Eventos y Vendedores"
                                               FontSize="14"
                                               FontWeight="Medium"/>
                                    <TextBlock Text="Rotaciones semanales"
                                               FontSize="11"
                                               Foreground="#666666"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Información del Usuario (parte inferior) -->
                <Border Grid.Row="3"
                        Background="#0A0A0A"
                        Padding="16,12"
                        Visibility="{Binding IsUserAuthenticated, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar del Guardián -->
                        <Ellipse Grid.Column="0"
                                 Width="40" Height="40"
                                 Fill="#2A2A2A">
                            <Ellipse.OpacityMask>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <materialDesign:PackIcon Kind="AccountCircle"
                                                                 Width="40" Height="40"
                                                                 Foreground="White"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Ellipse.OpacityMask>
                        </Ellipse>

                        <!-- Nombre del Guardián -->
                        <StackPanel Grid.Column="1" Margin="12,0">
                            <TextBlock Text="{Binding GuardianName, FallbackValue='Guardián'}"
                                       FontWeight="Medium"
                                       Foreground="#FFFFFF"/>
                            <TextBlock Text="Conectado"
                                       FontSize="11"
                                       Foreground="#27AE60"/>
                        </StackPanel>

                        <!-- Botón de Logout -->
                        <Button Grid.Column="2"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding LogoutCommand}"
                                ToolTip="Cerrar sesión"
                                Foreground="#888888">
                            <materialDesign:PackIcon Kind="Logout"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ========== ÁREA DE CONTENIDO PRINCIPAL ========== -->
        <Grid Grid.Column="1" Background="#121212">
            <Grid.RowDefinitions>
                <!-- Header con título del módulo -->
                <RowDefinition Height="Auto"/>
                <!-- Contenido principal -->
                <RowDefinition Height="*"/>
                <!-- Barra de estado -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header del Módulo Actual -->
            <Border Grid.Row="0"
                    Background="#1A1A1A"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding CurrentModuleTitle}"
                               FontSize="24"
                               FontWeight="Light"
                               Foreground="#FFFFFF"
                               VerticalAlignment="Center"/>

                    <!-- Indicador de estado de API -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Ellipse Width="8" Height="8"
                                 Fill="{Binding IsApiAvailable, Converter={StaticResource BoolToColorConverter}, FallbackValue=#EF5350}"
                                 Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding IsApiAvailable, Converter={StaticResource BoolToApiStatusConverter}, FallbackValue='API Desconectada'}"
                                   FontSize="12"
                                   Foreground="#888888"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Área de Contenido Dinámico -->
            <ContentControl Grid.Row="1"
                            Content="{Binding CurrentViewModel}"
                            Margin="24">
                <!-- Contenido por defecto cuando no hay módulo seleccionado -->
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:ViewModelBase}">
                        <Grid>
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="ShieldStar"
                                                         Width="120" Height="120"
                                                         Foreground="#2A2A2A"
                                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Bienvenido a GuardianOS"
                                           FontSize="28"
                                           FontWeight="Light"
                                           Foreground="#4A4A4A"
                                           HorizontalAlignment="Center"
                                           Margin="0,24,0,8"/>
                                <TextBlock Text="Selecciona un módulo del menú lateral para comenzar"
                                           FontSize="14"
                                           Foreground="#3A3A3A"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>

            <!-- Contenido de bienvenida cuando no hay ViewModel -->
            <Grid Grid.Row="1"
                  Visibility="{Binding CurrentViewModel, Converter={StaticResource NullToVisibilityConverter}, FallbackValue=Visible}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                MaxWidth="900"
                                Margin="0,60,0,60">
                        <materialDesign:PackIcon Kind="ShieldStar"
                                                 Width="120" Height="120"
                                                 Foreground="#2A2A2A"
                                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Bienvenido a GuardianOS"
                                   FontSize="28"
                                   FontWeight="Light"
                                   Foreground="#4A4A4A"
                                   HorizontalAlignment="Center"
                                   Margin="0,24,0,8"/>
                        <TextBlock Text="Selecciona un módulo del menú lateral para comenzar"
                                   FontSize="14"
                                   Foreground="#3A3A3A"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,32"/>
                        
                        <!-- Llamada a la acción cuando no está conectado -->
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding ConnectWithBungieCommand}"
                                Visibility="{Binding IsUserAuthenticated, Converter={StaticResource InvertedBoolToVisConverter}, FallbackValue=Visible}"
                                Background="#7B68EE"
                                BorderBrush="#7B68EE"
                                Foreground="White"
                                Padding="24,12">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Login" 
                                                         VerticalAlignment="Center"
                                                         Width="20" Height="20"
                                                         Margin="0,0,12,0"/>
                                <TextBlock Text="Conectar con Bungie para comenzar"
                                           VerticalAlignment="Center"
                                           FontSize="14"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Tarjetas de Personajes (cuando está autenticado) -->
                        <StackPanel Visibility="{Binding IsUserAuthenticated, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}"
                                    Margin="0,32,0,0">
                            
                            <TextBlock Text="SELECCIONA TU GUARDIÁN"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#666666"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,24"/>
                            
                            <!-- Lista de personajes -->
                            <ItemsControl ItemsSource="{Binding Characters}"
                                          HorizontalAlignment="Center">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Tarjeta de Personaje - Enfoque Simple -->
                                        <Button Command="{Binding DataContext.SelectCharacterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Cursor="Hand"
                                                Margin="8"
                                                Width="260"
                                                Height="150"
                                                Padding="0"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                            
                                            <!-- Contenido de la tarjeta -->
                                            <Border x:Name="CardBorder"
                                                    CornerRadius="8"
                                                    BorderThickness="2"
                                                    BorderBrush="Transparent">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.4" Color="Black"/>
                                                </Border.Effect>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="#F5DC56"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                
                                                <Grid>
                                                    <!-- Fondo: Emblema -->
                                                    <Border CornerRadius="6">
                                                        <Border.Background>
                                                            <ImageBrush ImageSource="{Binding EmblemBackgroundUrl}" Stretch="UniformToFill"/>
                                                        </Border.Background>
                                                    </Border>
                                                    
                                                    <!-- Capa oscura -->
                                                    <Border CornerRadius="6" Background="#99000000"/>
                                                    
                                                    <!-- Contenido -->
                                                    <DockPanel>
                                                        <!-- Barra inferior -->
                                                        <Border DockPanel.Dock="Bottom" 
                                                                Background="#CC000000"
                                                                Padding="16,10"
                                                                CornerRadius="0,0,6,6">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                
                                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Clock" Width="16" Height="16"
                                                                                             Foreground="#888888" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                                    <TextBlock Text="{Binding HoursPlayed, StringFormat='{}{0}h'}"
                                                                               FontSize="14" FontWeight="SemiBold" Foreground="#DDDDDD" VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                                
                                                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                                    <materialDesign:PackIcon Kind="Calendar" Width="16" Height="16"
                                                                                             Foreground="#888888" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                                    <TextBlock Text="{Binding DateLastPlayed, StringFormat='{}{0:dd/MM}'}"
                                                                               FontSize="14" FontWeight="SemiBold" Foreground="#DDDDDD" VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                        
                                                        <!-- Zona principal -->
                                                        <Grid Margin="16,16,16,8" VerticalAlignment="Top">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Clase + Raza -->
                                                            <StackPanel Grid.Column="0">
                                                                <TextBlock FontSize="22" FontWeight="Bold" Foreground="White">
                                                                    <TextBlock.Text>
                                                                        <Binding Path="ClassName" 
                                                                                 Converter="{StaticResource ToUpperConverter}"
                                                                                 FallbackValue="CAZADOR"/>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding RaceName}"
                                                                           FontSize="13" Foreground="#AAAAAA" Margin="0,4,0,0"/>
                                                            </StackPanel>
                                                            
                                                            <!-- Nivel de Luz -->
                                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                                <TextBlock Text="✦" FontSize="26" Foreground="#F5DC56"
                                                                           VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                                <TextBlock Text="{Binding Light}"
                                                                           FontSize="36" FontWeight="Bold" Foreground="#F5DC56"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </DockPanel>
                                                </Grid>
                                            </Border>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- Indicador de personaje seleccionado -->
                            <TextBlock Text="{Binding SelectedCharacter.ShortDescription, FallbackValue=''}"
                                       FontSize="14"
                                       Foreground="#888888"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,0"
                                       Visibility="{Binding SelectedCharacter, Converter={StaticResource NullToVisibilityConverter}, FallbackValue=Collapsed}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Barra de Estado Inferior -->
            <Border Grid.Row="2"
                    Background="#0D0D0D"
                    Padding="16,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="#666666"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                               Text="GuardianOS v1.0.0"
                               FontSize="11"
                               Foreground="#444444"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
