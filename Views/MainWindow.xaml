<Window x:Class="GuardianOS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuardianOS"
        xmlns:viewModels="clr-namespace:GuardianOS.ViewModels"
        xmlns:views="clr-namespace:GuardianOS.Views"
        xmlns:converters="clr-namespace:GuardianOS.Core.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="GuardianOS" Height="900" Width="1440"
        WindowStartupLocation="CenterScreen"
        Background="#000000"
        FontFamily="Segoe UI">

    <!-- Resources -->
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisConverter"/>
        <converters:BoolToApiStatusConverter x:Key="BoolToApiStatusConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:StringToBrushConverter x:Key="StringToBrushConverter"/>
        <converters:ToUpperConverter x:Key="ToUpperConverter"/>
        
        <!-- Styles -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A1A1A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Menú lateral de navegación -->
            <ColumnDefinition Width="280"/>
            <!-- Área de contenido principal -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- ========== PANEL DE NAVEGACIÓN LATERAL ========== -->
        <Border Grid.Column="0" 
                Background="#0D0D0D"
                BorderBrush="#2A2A2A"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Logo y título -->
                    <RowDefinition Height="Auto"/>
                    <!-- Estado de conexión -->
                    <RowDefinition Height="Auto"/>
                    <!-- Menú de navegación -->
                    <RowDefinition Height="*"/>
                    <!-- Información del usuario -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo y Título de la App -->
                <StackPanel Grid.Row="0" Margin="20,24,20,16">
                    <TextBlock Text="GUARDIAN"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#FFD700"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="OS"
                               FontSize="28"
                               FontWeight="Light"
                               Foreground="#FFFFFF"
                               Margin="-50,-8,0,0"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Destiny 2 Suite"
                               FontSize="11"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Estado de Conexión con Bungie -->
                <Border Grid.Row="1" 
                        Margin="16,0,16,16"
                        Padding="12"
                        CornerRadius="8"
                        Background="#1A1A1A">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Indicador visual tipo LED -->
                        <Border Grid.Column="0" 
                                Width="8" Height="8" 
                                CornerRadius="4" 
                                Background="{Binding IsApiAvailable, Converter={StaticResource BoolToColorConverter}}" 
                                Margin="0,2,8,0"
                                VerticalAlignment="Center"/>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding IsApiAvailable, Converter={StaticResource BoolToApiStatusConverter}}" 
                                   FontSize="11" 
                                   Foreground="#AAAAAA"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Menú de Navegación -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="12,0">
                        
                        <!-- SECCIÓN GESTIÓN -->
                        <TextBlock Text="GESTIÓN" 
                                   FontSize="10" 
                                   Foreground="#444444" 
                                   Margin="12,16,0,8" 
                                   FontWeight="Bold"/>

                        <!-- Botón Inventario -->
                        <Button Command="{Binding NavigateToInventoryCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Backpack" Width="20" Height="20" Margin="0,0,16,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Inventario" FontWeight="Medium"/>
                                    <TextBlock Text="Gestión de ítems" FontSize="10" Foreground="#666666" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- Botón Armas -->
                        <Button Command="{Binding NavigateToWeaponsCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pistol" Width="20" Height="20" Margin="0,0,16,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Evaluación de Armas" FontWeight="Medium"/>
                                    <TextBlock Text="God Rolls y Perks" FontSize="10" Foreground="#666666" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- SECCIÓN HERRAMIENTAS -->
                        <TextBlock Text="HERRAMIENTAS" 
                                   FontSize="10" 
                                   Foreground="#444444" 
                                   Margin="12,24,0,8" 
                                   FontWeight="Bold"/>

                        <!-- Botón Builds -->
                        <Button Command="{Binding NavigateToBuildGeneratorCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AutoFix" Width="20" Height="20" Margin="0,0,16,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <Grid>
                                        <TextBlock Text="Constructor de Builds" FontWeight="Medium"/>
                                        <Border Background="#9C27B0" CornerRadius="3" HorizontalAlignment="Right" Margin="110,-2,-30,0" Padding="4,1">
                                            <TextBlock Text="IA" FontSize="8" FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock Text="Optimización de armadura" FontSize="10" Foreground="#666666" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- Botón Mapas -->
                        <Button Command="{Binding NavigateToMapsCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Map" Width="20" Height="20" Margin="0,0,16,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Mapas y Coleccionables" FontWeight="Medium"/>
                                    <TextBlock Text="Checklists interactivos" FontSize="10" Foreground="#666666" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- Botón Eventos -->
                        <Button Command="{Binding NavigateToEventsCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarClock" Width="20" Height="20" Margin="0,0,16,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Eventos y Vendedores" FontWeight="Medium"/>
                                    <TextBlock Text="Rotaciones semanales" FontSize="10" Foreground="#666666" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Perfil de Usuario (Footer) -->
                <Border Grid.Row="3" Margin="16" Padding="12" Background="#161616" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Avatar / Icono -->
                        <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16" Background="#FFD700">
                             <materialDesign:PackIcon Kind="Account" Width="20" Height="20" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                                      Foreground="Black"/>
                        </Border>
                        
                        <!-- Nombre y Estado -->
                        <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding GuardianName, FallbackValue='Guardián'}" 
                                       FontSize="12" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       TextTrimming="CharacterEllipsis"/>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="6" Height="6" Fill="{Binding IsUserAuthenticated, Converter={StaticResource BoolToColorConverter}}" Margin="0,1,6,0"/>
                                <TextBlock Text="{Binding IsUserAuthenticated, Converter={StaticResource BoolToApiStatusConverter}}" 
                                           FontSize="10" 
                                           Foreground="#888888"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Botón Logout -->
                        <Button Grid.Column="2" 
                                Style="{StaticResource MaterialDesignIconForegroundButton}"
                                Command="{Binding LogoutCommand}"
                                ToolTip="Cerrar Sesión"
                                Width="24" Height="24">
                            <materialDesign:PackIcon Kind="Logout" Width="16" Height="16" Foreground="#666666"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ========== ÁREA DE CONTENIDO PRINCIPAL ========== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Contenido Dinámico -->
                <RowDefinition Height="*"/>
                <!-- Barra de Estado Inferior -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="32,32,32,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Título del Módulo Actual -->
                <TextBlock Grid.Column="0"
                           Text="{Binding CurrentModuleTitle}"
                           FontSize="24"
                           FontWeight="Light"
                           Foreground="#DDDDDD"
                           VerticalAlignment="Center"/>

                <!-- CURRENCIES - En el Header -->
                <!-- SOLO VISIBLES CUANDO ESTÁ AUTENTICADO -->
                <!-- CURRENCIES REMOVED - MOVED TO DASHBOARD -->

                <!-- Indicador de estado de API - ENHANCED ALERT STYLE -->
                <Border Grid.Column="2" 
                        Background="{Binding IsApiAvailable, Converter={StaticResource BoolToColorConverter}}" 
                        Opacity="0.2"
                        CornerRadius="4"
                        Width="140"
                        Height="28">
                </Border>
                <Border Grid.Column="2" 
                        BorderBrush="{Binding IsApiAvailable, Converter={StaticResource BoolToColorConverter}}" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Width="140"
                        Height="28">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Ellipse Width="6" Height="6" Fill="{Binding IsApiAvailable, Converter={StaticResource BoolToColorConverter}}" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding IsApiAvailable, Converter={StaticResource BoolToApiStatusConverter}}" 
                                   FontSize="10" 
                                   FontWeight="SemiBold"
                                   Foreground="{Binding IsApiAvailable, Converter={StaticResource BoolToColorConverter}}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Área de Contenido Dinámico -->
            <!-- 1. Layout para Vistas Dinámicas (Dashboard, Inventory, etc.) -->
            <!-- Visible si IsUserAuthenticated = true -->
            <ContentControl Grid.Row="1"
                            Content="{Binding CurrentViewModel}"
                            Margin="24"
                            Visibility="{Binding IsUserAuthenticated, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
                        <views:DashboardView />
                    </DataTemplate>
                    <!-- Aquí irán otros DataTemplates (Inventory, Maps, etc) -->
                </ContentControl.Resources>
            </ContentControl>

            <!-- 2. LOGIN / WELCOME SCREEN (Fallback cuando no está autenticado) -->
            <!-- Visible si IsUserAuthenticated = false -->
            <Grid Grid.Row="1"
                  Visibility="{Binding IsUserAuthenticated, Converter={StaticResource InvertedBoolToVisConverter}, FallbackValue=Visible}">
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,60">
                        <materialDesign:PackIcon Kind="ShieldStar"
                                                 Width="120" Height="120"
                                                 Foreground="#2A2A2A"
                                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Bienvenido a GuardianOS"
                                   FontSize="28"
                                   FontWeight="Light"
                                   Foreground="#CCCCCC"
                                   HorizontalAlignment="Center"
                                   Margin="0,24,0,8"/>
                        
                        <!-- Texto promocional -->
                        <TextBlock Text="Inicia sesión con Bungie para acceder a tu Guardián"
                                   FontSize="16"
                                   Foreground="#888888"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,40"/>
                        
                        <!-- Botón de Login -->
                        <Button Command="{Binding ConnectWithBungieCommand}"
                                Height="50"
                                materialDesign:ButtonAssist.CornerRadius="25"
                                Background="#FFD700"
                                Foreground="Black"
                                FontSize="16"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Padding="32,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Web" Width="24" Height="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="CONECTAR CON BUNGIE" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="#FFD700"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Barra de Estado Inferior -->
            <Border Grid.Row="2"
                    Background="#0D0D0D"
                    Padding="16,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="#666666"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                               Text="GuardianOS v1.0.0"
                               FontSize="11"
                               Foreground="#444444"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
