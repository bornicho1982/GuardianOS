<UserControl x:Class="GuardianOS.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:GuardianOS.ViewModels"
             xmlns:converters="clr-namespace:GuardianOS.Core.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisConverter"/>
        <converters:ToUpperConverter x:Key="ToUpperConverter"/>
        <converters:StringToBrushConverter x:Key="StringToBrushConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    MaxWidth="900"
                    Margin="0,60,0,60">

            <!-- Header Dashboard -->
            <materialDesign:PackIcon Kind="ShieldStar"
                                     Width="120" Height="120"
                                     Foreground="#2A2A2A"
                                     HorizontalAlignment="Center"/>
            <TextBlock Text="Bienvenido a GuardianOS"
                       FontSize="28"
                       FontWeight="Light"
                       Foreground="#4A4A4A"
                       HorizontalAlignment="Center"
                       Margin="0,24,0,8"/>

            <!-- CURRENCY BAR - Moved from MainWindow -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,16,0,16">
                
                <!-- Glimmer -->
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <Border Width="20" Height="20" Background="#3B9BD9" CornerRadius="2" Margin="0,0,6,0">
                        <TextBlock Text="G" FontWeight="Bold" FontSize="12" 
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{Binding Glimmer, StringFormat='{}{0:N0}'}" 
                               FontSize="13" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Bright Dust -->
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <Border Width="20" Height="20" Background="#5BA3D9" CornerRadius="2" Margin="0,0,6,0">
                        <TextBlock Text="âœ§" FontWeight="Bold" FontSize="12" 
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{Binding BrightDust, StringFormat='{}{0:N0}'}" 
                               FontSize="13" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Enhancement Prisms -->
                <StackPanel Orientation="Horizontal">
                    <Border Width="20" Height="20" Background="#D9A94B" CornerRadius="2" Margin="0,0,6,0">
                        <TextBlock Text="â¬¡" FontWeight="Bold" FontSize="11" 
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{Binding EnhancementCores, StringFormat='{}{0:N0}'}" 
                               FontSize="13" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <TextBlock Text="Selecciona un mÃ³dulo del menÃº lateral para comenzar"
                       FontSize="14"
                       Foreground="#3A3A3A"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,32"/>
            
            <!-- Tarjetas de Personajes -->
            <StackPanel Margin="0,32,0,0">
                
                <TextBlock Text="SELECCIONA TU GUARDIÃN"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"/>
                
                <!-- SKELETON LOADING CARDS -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding IsLoadingCharacters, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}">
                    <!-- Skeleton Card 1 -->
                    <Border Width="260" Height="150" Margin="8" CornerRadius="6" Background="#1A1A1A">
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1.0" Duration="0:0:0.8"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                    <!-- Skeleton Card 2 -->
                    <Border Width="260" Height="150" Margin="8" CornerRadius="6" Background="#1A1A1A">
                         <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1.0" Duration="0:0:0.8"
                                                         AutoReverse="True" BeginTime="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                    <!-- Skeleton Card 3 -->
                    <Border Width="260" Height="150" Margin="8" CornerRadius="6" Background="#1A1A1A">
                         <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1.0" Duration="0:0:0.8"
                                                         AutoReverse="True" BeginTime="0:0:0.4"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </StackPanel>
                
                <!-- Lista de personajes -->
                <ItemsControl ItemsSource="{Binding Characters}"
                              HorizontalAlignment="Center"
                              Visibility="{Binding IsLoadingCharacters, Converter={StaticResource InvertedBoolToVisConverter}, FallbackValue=Visible}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Tarjeta de Personaje -->
                            <Button Command="{Binding DataContext.SelectCharacterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Cursor="Hand"
                                    Margin="8"
                                    Width="260"
                                    Height="150"
                                    Padding="0"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="CardBorder"
                                                CornerRadius="8"
                                                BorderThickness="2"
                                                BorderBrush="Transparent"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="CardScale" ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                            <Border.Effect>
                                                <DropShadowEffect x:Name="CardShadow" BlurRadius="15" ShadowDepth="3" Opacity="0.4" Color="Black"/>
                                            </Border.Effect>
                                            
                                            <Grid>
                                                <!-- Fondo: Emblema -->
                                                <Border CornerRadius="6">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding EmblemBackgroundUrl}" Stretch="UniformToFill"/>
                                                    </Border.Background>
                                                </Border>
                                                
                                                <!-- Capa oscura -->
                                                <Border CornerRadius="6" Background="#99000000"/>
                                                
                                                <!-- Contenido -->
                                                <DockPanel>
                                                    <Border DockPanel.Dock="Bottom" 
                                                            Height="4"
                                                            CornerRadius="0,0,6,6"
                                                            Background="{Binding SubclassColor, Converter={StaticResource StringToBrushConverter}}"/>
                                                    
                                                    <Border DockPanel.Dock="Bottom" 
                                                            Background="#CC000000"
                                                            Padding="12,8"
                                                            CornerRadius="0,0,0,0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="Clock" Width="14" Height="14"
                                                                                         Foreground="#888888" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                                <TextBlock Text="{Binding HoursPlayed, StringFormat='{}{0}h'}"
                                                                           FontSize="12" FontWeight="SemiBold" Foreground="#DDDDDD" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            
                                                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                                <materialDesign:PackIcon Kind="Calendar" Width="14" Height="14"
                                                                                         Foreground="#888888" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                                <TextBlock Text="{Binding DateLastPlayed, StringFormat='{}{0:dd/MM}'}"
                                                                           FontSize="12" FontWeight="SemiBold" Foreground="#DDDDDD" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                    
                                                    <Grid Margin="14,14,14,8" VerticalAlignment="Top">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="White">
                                                                <TextBlock.Text>
                                                                    <Binding Path="ClassName" 
                                                                             Converter="{StaticResource ToUpperConverter}"
                                                                             FallbackValue="CAZADOR"/>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                            <TextBlock Text="{Binding RaceName, Converter={StaticResource ToUpperConverter}}"
                                                                       FontSize="11" Foreground="White" Opacity="0.7" Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                        
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                            <TextBlock Text="âœ¦" FontSize="22" Foreground="#F5DC56"
                                                                       VerticalAlignment="Center" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{Binding Light}"
                                                                       FontSize="28" FontWeight="Bold" Foreground="#F5DC56"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </DockPanel>
                                            </Grid>
                                        </Border>
                                        
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="#F5DC56"/>
                                                <Setter TargetName="CardBorder" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="25" ShadowDepth="5" Opacity="0.6" Color="#F5DC56"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Indicador de personaje seleccionado -->
                <TextBlock Text="{Binding SelectedCharacter.ShortDescription, FallbackValue=''}"
                           FontSize="14"
                           Foreground="#888888"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"
                           Visibility="{Binding SelectedCharacter, Converter={StaticResource NullToVisibilityConverter}, FallbackValue=Collapsed}"/>
                
                <!-- WEEKLY ROTATIONS PANEL -->
                <StackPanel Margin="0,40,0,0">
                    <TextBlock Text="ESTA SEMANA EN DESTINY"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Nightfall Card -->
                        <Border Width="200" Height="100" Margin="8" CornerRadius="6"
                                BorderBrush="#333333" BorderThickness="1">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/nightfall_bg.png" Opacity="0.3" Stretch="UniformToFill"/>
                            </Border.Background>
                            <Grid>
                                <Border Background="#000000" Opacity="0.4" CornerRadius="5"/>
                                <StackPanel Margin="12">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="24" Height="24" Background="#3B82F6" CornerRadius="4" Margin="0,0,8,0">
                                            <TextBlock Text="âš”" FontSize="14" Foreground="White" 
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="NIGHTFALL" FontSize="11" FontWeight="Bold" 
                                                   Foreground="#3B82F6" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="The Disgraced" FontSize="14" FontWeight="Medium" 
                                               Foreground="#FFFFFF" Margin="0,8,0,0"/>
                                    <TextBlock Text="Grandmaster disponible" FontSize="10" 
                                               Foreground="#CCCCCC" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Featured Raid Card -->
                        <Border Width="200" Height="100" Margin="8" CornerRadius="6"
                                BorderBrush="#333333" BorderThickness="1">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/raid_bg.png" Opacity="0.3" Stretch="UniformToFill"/>
                            </Border.Background>
                            <Grid>
                                <Border Background="#000000" Opacity="0.4" CornerRadius="5"/>
                                <StackPanel Margin="12">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="24" Height="24" Background="#F59E0B" CornerRadius="4" Margin="0,0,8,0">
                                            <TextBlock Text="ðŸ‘‘" FontSize="12" Foreground="White" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="RAID DESTACADA" FontSize="11" FontWeight="Bold" 
                                                   Foreground="#F59E0B" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="Last Wish" FontSize="14" FontWeight="Medium" 
                                               Foreground="#FFFFFF" Margin="0,8,0,0"/>
                                    <TextBlock Text="Farmeable esta semana" FontSize="10" 
                                               Foreground="#CCCCCC" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Dungeon Card -->
                        <Border Width="200" Height="100" Margin="8" CornerRadius="6"
                                BorderBrush="#333333" BorderThickness="1">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/dungeon_bg.png" Opacity="0.3" Stretch="UniformToFill"/>
                            </Border.Background>
                            <Grid>
                                <Border Background="#000000" Opacity="0.4" CornerRadius="5"/>
                                <StackPanel Margin="12">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="24" Height="24" Background="#10B981" CornerRadius="4" Margin="0,0,8,0">
                                            <TextBlock Text="ðŸ°" FontSize="12" Foreground="White" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="DUNGEON" FontSize="11" FontWeight="Bold" 
                                                   Foreground="#10B981" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="Warlord's Ruin" FontSize="14" FontWeight="Medium" 
                                               Foreground="#FFFFFF" Margin="0,8,0,0"/>
                                    <TextBlock Text="Pinnacle activo" FontSize="10" 
                                               Foreground="#CCCCCC" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </WrapPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
