<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             xmlns:vm="using:Traveler.Desktop.ViewModels"
             xmlns:services="using:Traveler.Core.Services"
             xmlns:organisms="using:Traveler.Desktop.Views.Components.Organisms"
             xmlns:molecules="using:Traveler.Desktop.Views.Components.Molecules"
             xmlns:converters="using:Traveler.Desktop.Converters"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="Traveler.Desktop.Views.DashboardHomeView"
             x:DataType="vm:DashboardHomeViewModel">

    <UserControl.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BungieUrlConverter x:Key="BungieUrlConverter"/>
    </UserControl.Resources>

    <ScrollViewer>
        <Grid ColumnDefinitions="2*, 1*" Margin="24" ColumnSpacing="24">
            
            <!-- COLUMNA 0: PRINCIPAL -->
            <StackPanel Grid.Column="0" Spacing="24">
                
                <!-- ROW 0: WELCOME & LOGIN -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="24">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackPanel>
                            <TextBlock Text="Welcome back, Guardian." Classes="H1" FontSize="28" Foreground="White" Margin="0,0,0,4"/>
                            <TextBlock Text="The Last City awaits your return." FontSize="14" Foreground="#888"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" Command="{Binding LoginCommand}" IsVisible="{Binding !IsLoggedIn}"
                                Classes="Premium" Content="CONNECT TO BUNGIE.NET" Padding="20,10"/>
                    </Grid>
                </Border>

                <!-- ROW 1: SQUAD ROSTER -->
                <ItemsControl ItemsSource="{Binding Characters}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <organisms:CharacterCardView DataContext="{Binding}" Margin="0,0,16,0" Height="140"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- ROW 2: HEADLINES (DAILY ROTATION) -->
                <StackPanel Spacing="12">
                    <TextBlock Text="TODAY'S HEADLINES" Classes="H2" Opacity="0.7" Margin="4,0,0,0"/>
                    
                    <ItemsControl ItemsSource="{Binding DailyActivities}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="16"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E1E1E" CornerRadius="12" Width="300" Height="180" ClipToBounds="True">
                                    <Grid>
                                        <asyncImageLoader:AdvancedImage Source="{Binding ImagePath, Converter={StaticResource BungieUrlConverter}}" Stretch="UniformToFill" Opacity="0.4"/>
                                        <Border Background="LinearGradientBrush" Opacity="0.8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="Transparent" Offset="0"/>
                                                    <GradientStop Color="#000000" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        
                                        <StackPanel VerticalAlignment="Bottom" Margin="16">
                                            <TextBlock Text="{Binding ActivityType}" FontSize="12" Foreground="#FFD700" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding ActivityName}" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Reward}" FontSize="12" Foreground="#CCC" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

            </StackPanel>
            
            <!-- COLUMNA 1: UTILIDAD -->
            <StackPanel Grid.Column="1" Spacing="24">
                
                <!-- CARD 1: VAULT STATUS -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="20">
                    <StackPanel Spacing="12">
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBlock Text="VAULT STATUS" FontWeight="Bold" Foreground="#888"/>
                            <TextBlock Text="{Binding VaultSpaceText}" Foreground="{Binding VaultSpaceColor}" FontWeight="Bold"/>
                        </Grid>
                        <ProgressBar Value="{Binding VaultSpaceUsed}" Maximum="{Binding VaultSpaceTotal}" Height="8" 
                                     Foreground="{Binding VaultSpaceColor}" Background="#333" CornerRadius="4"/>
                        <TextBlock Text="Manage your inventory to avoid losing items." FontSize="11" Foreground="#666" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- CARD 2: POSTMASTER -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="20" BorderThickness="2">
                    <Border.BorderBrush>
                        <Binding Path="IsPostmasterWarning">
                            <Binding.Converter>
                                <converters:BoolToColorConverter TrueColor="#FF5555" FalseColor="Transparent"/>
                            </Binding.Converter>
                        </Binding>
                    </Border.BorderBrush>
                    
                    <Grid ColumnDefinitions="Auto, *">
                        <PathIcon Data="{StaticResource MailIcon}" Width="24" Height="24" Margin="0,0,16,0"
                                  Foreground="{Binding IsPostmasterWarning, Converter={StaticResource BoolToColorConverter}, ConverterParameter=Postmaster}"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="POSTMASTER" FontWeight="Bold" Foreground="#888" FontSize="11"/>
                            <TextBlock Text="{Binding PostmasterStatusText}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- CARD 3: ECONOMY -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock Text="ECONOMY" FontWeight="Bold" Foreground="#888"/>
                        <ItemsControl ItemsSource="{Binding Currencies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <molecules:CurrencyCellView DataContext="{Binding}" Margin="0,0,0,8"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
