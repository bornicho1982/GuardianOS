<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             xmlns:vm="using:Traveler.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Traveler.Desktop.Views.DashboardHomeView"
             x:DataType="vm:DashboardHomeViewModel">

    <ScrollViewer>
        <StackPanel Spacing="20" Margin="20">
            <!-- Guardian Emblem Header -->
            <Border CornerRadius="8" ClipToBounds="True" Height="100" Background="#333">
                <Panel>
                    <asyncImageLoader:AdvancedImage 
                        Source="{Binding CurrentCharacter.EmblemBackgroundUrl, Converter={StaticResource BungieUrlConverter}}" 
                        Stretch="UniformToFill"/>
                    
                    <StackPanel VerticalAlignment="Bottom" Margin="20" Orientation="Horizontal" Spacing="15">
                         <TextBlock Text="{Binding CurrentCharacter.ClassName}" FontSize="32" FontWeight="Bold" Foreground="White" 
                                   Effect="drop-shadow(2 2 4 black)"/>
                        <TextBlock Text="{Binding CurrentCharacter.LightLevel}" FontSize="32" Foreground="#EBC805" FontWeight="Light"
                                   Effect="drop-shadow(2 2 4 black)"/>
                    </StackPanel>
                </Panel>
            </Border>

            <!-- Stats Grid -->
            <Grid ColumnDefinitions="*, *, *" RowDefinitions="Auto">
                
                <!-- Currencies -->
                <Border Grid.Column="0" Background="#252525" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                    <StackPanel Spacing="10">
                        <TextBlock Text="CURRENCIES" FontWeight="Bold" Foreground="#888" FontSize="12"/>
                        <ItemsControl ItemsSource="{Binding Currencies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="24, *, Auto" Margin="0,5">
                                        <asyncImageLoader:AdvancedImage Source="{Binding Icon, Converter={StaticResource BungieUrlConverter}}" Width="20" Height="20"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Quantity}" FontWeight="Bold"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Vault Status -->
                <Border Grid.Column="1" Background="#252525" CornerRadius="8" Padding="15" Margin="5,0,5,0">
                    <StackPanel Spacing="10">
                        <TextBlock Text="VAULT STATUS" FontWeight="Bold" Foreground="#888" FontSize="12"/>
                        <ProgressBar Value="{Binding VaultSpaceUsed}" Maximum="{Binding VaultSpaceTotal}" Height="10" Foreground="{Binding VaultSpaceColor}" Background="#444"/>
                        <TextBlock Text="{Binding VaultSpaceText}" HorizontalAlignment="Right" FontSize="12" Foreground="{Binding VaultSpaceColor}"/>
                    </StackPanel>
                </Border>
                
                <!-- Connection Status Placehoder -->
                 <Border Grid.Column="2" Background="#252525" CornerRadius="8" Padding="15" Margin="10,0,0,0">
                    <StackPanel Spacing="10">
                        <TextBlock Text="CONNECTION" FontWeight="Bold" Foreground="#888" FontSize="12"/>
                         <StackPanel Orientation="Horizontal" Spacing="10">
                            <Ellipse Width="10" Height="10" Fill="{Binding ConnectionStatusColor}"/>
                            <TextBlock Text="{Binding ConnectionStatus}" VerticalAlignment="Center"/>
                        </StackPanel>
                         <Button Content="{Binding ConnectionButtonText}" Command="{Binding ToggleConnectionCommand}" HorizontalAlignment="Stretch"/>
                         <Button Content="Refresh Inventory" Command="{Binding RefreshInventoryCommand}" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
