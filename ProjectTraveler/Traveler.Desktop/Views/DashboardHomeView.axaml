<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             xmlns:vm="using:Traveler.Desktop.ViewModels"
             xmlns:services="using:Traveler.Core.Services"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="Traveler.Desktop.Views.DashboardHomeView"
             x:DataType="vm:DashboardHomeViewModel">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="30">
            
            <!-- SECCIÓN 1: ESCUADRA (LOS 3 PERSONAJES) -->
            <StackPanel Spacing="10">
                <TextBlock Text="{Binding [status.guardian], Source={x:Static services:LocalizationService.Instance}, FallbackValue='GUARDIAN ROSTER'}" 
                           FontSize="20" FontWeight="Bold" Foreground="White" Opacity="0.8"/>
                
                <!-- Lista Horizontal de Personajes -->
                <ItemsControl ItemsSource="{Binding Characters}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Tarjeta de Personaje -->
                            <Border Margin="0,0,15,0" Height="120" CornerRadius="8" ClipToBounds="True" BoxShadow="0 4 10 0 #50000000">
                                <Panel>
                                    <!-- Fondo del Emblema -->
                                    <asyncImageLoader:AdvancedImage 
                                        Source="{Binding EmblemBackgroundPath, Converter={StaticResource BungieUrlConverter}}" 
                                        Stretch="UniformToFill"/>
                                    
                                    <!-- Degradado oscuro para que se lea el texto -->
                                    <Border>
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                                <GradientStop Color="#CC000000" Offset="0.0" />
                                                <GradientStop Color="#00000000" Offset="0.8" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- Datos del Personaje -->
                                    <Grid ColumnDefinitions="Auto, *" Margin="20">
                                        <!-- Icono de Clase (Placeholder o real si lo tienes) -->
                                        <!-- <PathIcon Data="..." /> --> 
                                        
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="5">
                                            <TextBlock Text="{Binding ClassType}" FontSize="24" FontWeight="Bold" Foreground="White" 
                                                       Effect="drop-shadow(1 1 2 black)"/>
                                            <TextBlock Text="{Binding RaceName}" FontSize="14" Foreground="#CCC"/>
                                            <Border Background="#33FFFFFF" CornerRadius="4" Padding="6,2" HorizontalAlignment="Left" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Title}" FontSize="10" FontWeight="Bold" Foreground="#FFD700" LetterSpacing="1"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Nivel de Luz a la derecha -->
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Spacing="2">
                                                <PathIcon Data="{StaticResource GhostIcon}" Width="16" Height="16" Foreground="#FFD700" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding LightLevel}" FontSize="36" Foreground="#FFD700" FontWeight="Light"
                                                           Effect="drop-shadow(2 2 4 black)"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <!-- Barra de Hover (Interacción) -->
                                    <Border BorderBrush="#FFD700" BorderThickness="0,0,0,4" Opacity="0" Name="SelectionIndicator">
                                        <Border.Styles>
                                            <!-- Aquí irían estilos para mostrarse al hacer hover, requieren Styles en el padre -->
                                        </Border.Styles>
                                    </Border>
                                </Panel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- SECCIÓN 2: ECONOMÍA Y BÓVEDA -->
            <Grid ColumnDefinitions="2*, 1*" >
                
                <!-- Columna Izquierda: Divisas -->
                <Border Grid.Column="0" Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,20,0">
                    <StackPanel Spacing="15">
                        <TextBlock Text="{Binding [status.currencies], Source={x:Static services:LocalizationService.Instance}, FallbackValue='RESOURCES'}" 
                                   FontWeight="Bold" Foreground="#888" LetterSpacing="1"/>
                        
                        <!-- Grid de Materiales -->
                        <ItemsControl ItemsSource="{Binding Currencies}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2A2A2A" CornerRadius="4" Padding="10,5" Margin="0,0,10,10" Width="180">
                                        <Grid ColumnDefinitions="32, *">
                                            <asyncImageLoader:AdvancedImage Source="{Binding Icon, Converter={StaticResource BungieUrlConverter}}" 
                                                                          Width="24" Height="24" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Quantity}" FontWeight="Bold" FontSize="16"/>
                                                <TextBlock Text="{Binding Name}" FontSize="11" Foreground="#888"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Columna Derecha: Bóveda -->
                <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="15">
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBlock Text="{Binding [status.vaultItems], Source={x:Static services:LocalizationService.Instance}, FallbackValue='VAULT'}" 
                                       FontWeight="Bold" Foreground="#888" LetterSpacing="1"/>
                            <TextBlock Grid.Column="1" Text="{Binding VaultSpaceText}" Foreground="{Binding VaultSpaceColor}" FontWeight="Bold"/>
                        </Grid>
                        
                        <!-- Barra de Progreso Grande -->
                        <ProgressBar Value="{Binding VaultSpaceUsed}" Maximum="{Binding VaultSpaceTotal}" Height="15" 
                                     Foreground="{Binding VaultSpaceColor}" Background="#111" CornerRadius="7"/>
                        
                        <TextBlock Text="Manage your storage carefully. Items may be lost if Postmaster overflows." 
                                   FontSize="11" Foreground="#666" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>
