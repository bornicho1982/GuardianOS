<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Traveler.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="Traveler.Desktop.Views.OrganizerView"
             x:DataType="vm:OrganizerViewModel">
  
  <Grid RowDefinitions="Auto, Auto, *" Margin="20">
    
    <!-- Header -->
    <TextBlock Grid.Row="0" Text="Organizer" FontSize="28" FontWeight="Bold" Margin="0,0,0,16"/>
    
    <!-- Filter Bar -->
    <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" Padding="12" Margin="0,0,0,16">
      <Grid ColumnDefinitions="*, Auto, Auto, Auto">
        
        <!-- Filter TextBox -->
        <TextBox Grid.Column="0" 
                 Text="{Binding FilterText}"
                 Watermark="Filter: is:exotic, stat:resilience:>100, power:>1800..."
                 Background="#1E1E1E"
                 BorderThickness="0"
                 CornerRadius="4"
                 Padding="12,8"/>
        
        <!-- Clear Button -->
        <Button Grid.Column="1" 
                Content="âœ•" 
                Command="{Binding ClearFilterCommand}"
                Background="Transparent"
                Margin="8,0,0,0"/>
        
        <!-- Refresh Button -->
        <Button Grid.Column="2" 
                Content="â†» Refresh" 
                Command="{Binding RefreshCommand}"
                Margin="8,0,0,0"/>
        
        <!-- Show Base Stats Toggle -->
        <ToggleButton Grid.Column="3" 
                      IsChecked="{Binding ShowBaseStats}"
                      Content="Base Stats"
                      Margin="8,0,0,0"/>
        
      </Grid>
    </Border>
    
    <!-- Items List (Simplified from DataGrid) -->
    <Border Grid.Row="2" Background="#252526" CornerRadius="8" Padding="8">
      <ListBox ItemsSource="{Binding FilteredItems}" 
               SelectedItem="{Binding SelectedItem}"
               Background="Transparent">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <Border Background="#1E1E1E" CornerRadius="4" Padding="12,8" Margin="2">
              <Grid ColumnDefinitions="*, 80, 60, 60, Auto">
                
                <!-- Name -->
                <StackPanel>
                  <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                  <TextBlock Text="{Binding ItemType}" FontSize="11" Foreground="Gray"/>
                </StackPanel>
                
                <!-- Location -->
                <TextBlock Grid.Column="1" Text="{Binding Location}" VerticalAlignment="Center" Foreground="Gray"/>
                
                <!-- Power -->
                <TextBlock Grid.Column="2" Text="{Binding PowerLevel}" VerticalAlignment="Center" Foreground="Yellow"/>
                
                <!-- Exotic Badge -->
                <Border Grid.Column="3" 
                        IsVisible="{Binding IsExotic}"
                        Background="#FFD54F" 
                        CornerRadius="4" 
                        Padding="6,2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                  <TextBlock Text="EXO" FontSize="9" FontWeight="Bold" Foreground="Black"/>
                </Border>
                
                <!-- Locked -->
                <TextBlock Grid.Column="4" 
                           Text="ðŸ”’" 
                           IsVisible="{Binding IsLocked}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"/>
                
              </Grid>
            </Border>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Border>
    
  </Grid>
</UserControl>
