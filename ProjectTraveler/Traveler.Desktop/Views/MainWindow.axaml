<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Traveler.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Traveler.Desktop.Views.MainWindow"
        x:DataType="vm:DashboardViewModel"
        Title="Project Traveler">

    <Grid ColumnDefinitions="220, *" Background="#1E1E1E">
        
        <!-- SIDEBAR: Fluent Design Style -->
        <Border Grid.Column="0" Background="#1F1F1F" BorderBrush="#2D2D2D" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto, *, Auto">
                <!-- App Header -->
                <Border Grid.Row="0" Background="#252528" Padding="16,20" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Width="36" Height="36" CornerRadius="8" Background="#EBC805">
                            <TextBlock Text="G" FontWeight="Black" FontSize="18" Foreground="#1F1F1F" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="GUARDIAN" FontWeight="Black" FontSize="16" Foreground="White" LetterSpacing="1"/>
                            <TextBlock Text="OS" FontWeight="Bold" FontSize="10" Foreground="#EBC805"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Navigation List -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding NavigationItems}" 
                         SelectedItem="{Binding SelectedItem}"
                         Background="Transparent"
                         Margin="8,0">
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="14,12"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="CornerRadius" Value="6"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                        <Style Selector="ListBoxItem:selected">
                            <Setter Property="Background" Value="#2D2D30"/>
                        </Style>
                        <Style Selector="ListBoxItem:pointerover">
                            <Setter Property="Background" Value="#252528"/>
                        </Style>
                    </ListBox.Styles>
                    
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="14">
                                <TextBlock Text="{Binding Icon}" FontSize="18" VerticalAlignment="Center" Width="24"/>
                                <TextBlock Text="{Binding Label}" VerticalAlignment="Center" FontSize="14" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Footer: Settings & Language -->
                <StackPanel Grid.Row="2" Margin="8,8,8,16" Spacing="4">
                    <Border Height="1" Background="#2D2D2D" Margin="0,0,0,8"/>
                    <Button Content="âš™ï¸ ConfiguraciÃ³n" Background="Transparent" Foreground="#888" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="14,10"/>
                    <Button Content="ðŸŒ EspaÃ±ol" Background="Transparent" Foreground="#666" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="14,10" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT AREA -->
        <TransitioningContentControl Grid.Column="1" Content="{Binding CurrentView}">
            <TransitioningContentControl.PageTransition>
                <CrossFade Duration="0:0:0.15" />
            </TransitioningContentControl.PageTransition>
        </TransitioningContentControl>
        
    </Grid>

</Window>
