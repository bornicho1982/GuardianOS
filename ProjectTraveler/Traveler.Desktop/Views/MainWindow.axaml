<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Traveler.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Traveler.Desktop.Views.MainWindow"
        x:DataType="vm:DashboardViewModel"
        Title="Project Traveler">

    <Grid ColumnDefinitions="220, *" Background="#1E1E1E">
        
        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto, *">
                <!-- App Header -->
                <StackPanel Grid.Row="0" Margin="16,20" Orientation="Horizontal" Spacing="10">
                    <PathIcon Data="{DynamicResource FluentIconGlobe}" Foreground="White"/> 
                    <!-- Note: We'll need to define icons or use text if icons fail. Using Text for safety first. -->
                    <TextBlock Text="TRAVELER" FontWeight="Black" FontSize="20" Foreground="White" LetterSpacing="2"/>
                </StackPanel>

                <!-- Navigation List -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding NavigationItems}" 
                         SelectedItem="{Binding SelectedItem}"
                         Background="Transparent"
                         Margin="0,10">
                    <ListBox.Styles>
                        <!-- Style for ListBoxItem to look like nav buttons -->
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="Margin" Value="8,2"/>
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </ListBox.Styles>
                    
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <!-- Using simple text icon placeholder or Binding Icon if using a Font/Symbol lib -->
                                <!--<TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets"/>-->
                                <TextBlock Text="{Binding Label}" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- CONTENT AREA -->
        <TransitioningContentControl Grid.Column="1" Content="{Binding CurrentView}">
            <TransitioningContentControl.PageTransition>
                <CrossFade Duration="0:0:0.15" />
            </TransitioningContentControl.PageTransition>
        </TransitioningContentControl>
        
    </Grid>

</Window>
