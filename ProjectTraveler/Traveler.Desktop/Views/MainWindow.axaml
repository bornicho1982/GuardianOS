<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Traveler.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Traveler.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="GuardianOS Debug SplitView">
    
    <SplitView DisplayMode="CompactInline"
               IsPaneOpen="True"
               CompactPaneLength="50"
               OpenPaneLength="220"
               PaneBackground="#1E1E1E">
        <SplitView.Pane>
            <StackPanel Spacing="5" Margin="0,10">
                <ListBox Background="Transparent" SelectedIndex="{Binding SelectedIndex}">
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <PathIcon Data="{StaticResource DashboardIcon}" Width="20"/>
                            <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <PathIcon Data="{StaticResource InventoryIcon}" Width="20"/>
                            <TextBlock Text="Inventory" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <PathIcon Data="{StaticResource LoadoutIcon}" Width="20"/>
                            <TextBlock Text="Loadouts" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
                
                <Rectangle Height="1" Fill="#333" Margin="10,10"/>
                
                <Button Background="Transparent" HorizontalAlignment="Stretch" Margin="4,0">
                        <StackPanel Orientation="Horizontal" Spacing="15">
                        <PathIcon Data="{StaticResource SettingsIcon}" Width="20"/>
                        <TextBlock Text="Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <TextBlock Text="Content" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </SplitView.Content>
    </SplitView>
</Window>
