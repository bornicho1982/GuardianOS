<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Traveler.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Traveler.Desktop.Views.TriumphsView"
             x:DataType="vm:TriumphsViewModel">
  
  <Grid RowDefinitions="Auto, Auto, *" Margin="20">
    
    <!-- Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,16">
      <TextBlock Text="Triumphs" FontSize="28" FontWeight="Bold"/>
      <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
        <ToggleButton IsChecked="{Binding ShowCompleted}" Content="Show Completed"/>
        <Button Content="↻ Refresh" Command="{Binding RefreshCommand}"/>
      </StackPanel>
    </Grid>
    
    <!-- Loading Indicator -->
    <Border Grid.Row="1" IsVisible="{Binding IsLoading}" Background="#2D2D30" CornerRadius="4" Padding="12">
      <TextBlock Text="Loading triumphs..." Foreground="Gray"/>
    </Border>
    
    <!-- TreeView -->
    <TreeView Grid.Row="2" 
              ItemsSource="{Binding RootNodes}"
              SelectedItem="{Binding SelectedTriumph}"
              Background="#1E1E1E">
      
      <TreeView.ItemTemplate>
        <TreeDataTemplate ItemsSource="{Binding Children}">
          <Border Padding="8,6" CornerRadius="4" Margin="2">
            <Grid ColumnDefinitions="Auto, *, Auto">
              
              <!-- State Icon -->
              <Border Grid.Column="0" 
                      Width="24" Height="24" 
                      CornerRadius="12" 
                      Margin="0,0,10,0"
                      Background="#424242">
                <TextBlock Text="○" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="12"/>
              </Border>
              
              <!-- Name & Description -->
              <StackPanel Grid.Column="1">
                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Description}" 
                           FontSize="11" 
                           Foreground="Gray" 
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="400"/>
              </StackPanel>
              
              <!-- Progress -->
              <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" Margin="10,0,0,0">
                <TextBlock Text="{Binding CompletionPercent, StringFormat={}{0}%}" 
                           FontSize="11" 
                           Foreground="Gray"
                           VerticalAlignment="Center"/>
              </StackPanel>
              
            </Grid>
          </Border>
        </TreeDataTemplate>
      </TreeView.ItemTemplate>
      
    </TreeView>
    
  </Grid>
</UserControl>
